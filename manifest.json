{
  "manifest_version": 3,
  "name": "Tab Scroller",
  "version": "1.0",
  "description": "Scroll to change tabs when hovering over them",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
